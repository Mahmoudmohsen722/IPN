

CREATE COMPUTE MODULE acquirer_flow_Compute4
	CREATE FUNCTION Main() RETURNS BOOLEAN
	BEGIN
		SET OutputLocalEnvironment.Destination.File.Name = InputRoot.JSON.Data.receiver_ID || '.txt';
		SET OutputRoot.JSON.Data = InputRoot.JSON.Data;
		SET OutputRoot.JSON.Data.wallet_balance = InputRoot.JSON.Data.wallet_balance + Environment.Variables.Data.amount;
		-- CALL CopyMessageHeaders();
		-- CALL CopyEntireMessage();
		RETURN TRUE;
	END;

	CREATE PROCEDURE CopyMessageHeaders() BEGIN
		DECLARE I INTEGER 1;
		DECLARE J INTEGER;
		SET J = CARDINALITY(InputRoot.*[]);
		WHILE I < J DO
			SET OutputRoot.*[I] = InputRoot.*[I];
			SET I = I + 1;
		END WHILE;
	END;

	CREATE PROCEDURE CopyEntireMessage() BEGIN
		SET OutputRoot = InputRoot;
	END;
END MODULE;
