{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "ipn_services",
    "description" : "ipn_services",
    "version" : "1.0.0"
  },
  "servers" : [ {
    "url" : "http://desktop-gmmlf9g:7800/v1"
  } ],
  "paths" : {
    "/user/register" : {
      "summary" : "API send data of user to register a new user to get validation",
      "post" : {
        "summary" : "send data from user to psp",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/User"
              }
            }
          }
        },
        "responses" : {
          "200" : {
            "description" : "success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/User"
                }
              }
            }
          },
          "400" : {
            "description" : "invalid"
          }
        }
      }
    },
    "/psp/register" : {
      "summary" : "API send data of user to register a new user to get validation",
      "post" : {
        "summary" : "send data from psp to cbe",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/User"
              }
            }
          }
        },
        "responses" : {
          "200" : {
            "description" : "success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/User"
                }
              }
            }
          },
          "400" : {
            "description" : "invalid"
          }
        }
      }
    },
    "/cbe/register" : {
      "summary" : "API send data of user to register a new user to get validation",
      "post" : {
        "summary" : "send data from cbe to bank",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/User"
              }
            }
          }
        },
        "responses" : {
          "200" : {
            "description" : "success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/User"
                }
              }
            }
          },
          "400" : {
            "description" : "invalid"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "User" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "int64"
          },
          "username" : {
            "type" : "string",
            "example" : "theUser"
          },
          "firstName" : {
            "type" : "string",
            "example" : "John"
          },
          "lastName" : {
            "type" : "string",
            "example" : "James"
          },
          "acc_number" : {
            "type" : "string"
          },
          "card_number" : {
            "type" : "string"
          },
          "wallet_number" : {
            "type" : "string"
          },
          "password" : {
            "type" : "string",
            "example" : "12345"
          },
          "phone" : {
            "type" : "string",
            "example" : "12345"
          }
        },
        "xml" : {
          "name" : "user"
        }
      }
    }
  }
}